<div>

<%= form_for @seller do |f| %>
  <fieldset>
  <legend>Enter Seller Details</legend>

  <div class="field">
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name, size: 40 %>
  </div>

  <div class="field">
      <%= f.label :address %><br>
      <%= f.text_area :address, rows: 3, cols: 40 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  </fieldset>
<% end %>

</div>